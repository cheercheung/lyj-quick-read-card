{
  "name": "lyj-quick-read-card",
  "private": true,
  "version": "1.0.6",
  "description": "A minimalist, high-speed data labelling tool that converts table cells into cards for rapid categorization via arrow keys.",
  "author": "cheercheung",
  "homepage": "https://github.com/cheercheung/lyj-quick-read-card",
  "repository": {
    "type": "git",
    "url": "https://github.com/cheercheung/lyj-quick-read-card.git"
  },
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "package": "electron-builder -m --publish never",
    "package:mac": "electron-builder -m --publish never",
    "package:win": "electron-builder -w --publish never",
    "package:linux": "electron-builder -l --publish never",
    "release": "electron-builder -mwl --publish never"
  },
  "build": {
    "appId": "com.quickread.card",
    "productName": "QuickReadCard",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "cheercheung",
        "repo": "lyj-quick-read-card"
      }
    ],
    "files": [
      "index.html",
      "style.css",
      "app.js",
      "main.js",
      "package.json"
    ]
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^6.0.0"
  }
}
